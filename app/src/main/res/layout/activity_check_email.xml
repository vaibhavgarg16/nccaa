<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activityes.CheckEmailActivity">

    <include layout="@layout/appbar" />

    <RelativeLayout
        android:padding="20dp"
        android:layout_marginTop="40dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imgLockId"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_below="@+id/imgId"
            android:layout_marginTop="20dp"
            android:src="@drawable/icn_send" />

        <TextView
            android:id="@+id/txtForgotId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imgLockId"
            android:layout_marginTop="10dp"
            android:text="Check your email"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/txt2Id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtForgotId"
            android:layout_marginTop="5dp"
            android:text="We have sent a password recovery instruction to\n your email." />

        <Button
            android:textAllCaps="false"
            android:id="@+id/btnConfirmId"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@drawable/capsul_blue_btn"
            android:text="Continue to Confirmation Code"
            android:textColor="@color/white" />
    </RelativeLayout>
</FrameLayout>