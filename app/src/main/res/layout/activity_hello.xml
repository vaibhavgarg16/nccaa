                    android:layout_height="140dp"
                    android:layout_weight="1"
                    android:elevation="8dp"
                    android:orientation="vertical"
                    app:cardCornerRadius="8dp"
                    android:layout_margin="10dp"
                    app:contentPadding="20dp">

                    <LinearLayout
